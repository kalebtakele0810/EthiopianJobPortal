<h1>Employers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.name %></td>
        <td><% if employer.logo.attached? %>
            <!-- <image src="<%= (url_for(employer.logo)) %>" width="70px" height="70px"> 
                <%= image_tag rails_blob_url(employer.logo),width:"70px",height:"70px" %>
            --> 
                <%= image_tag rails_blob_url(employer.logo),width:"70px",height:"70px" %>
        </td>
        <% end %>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employer', new_employer_path %>
