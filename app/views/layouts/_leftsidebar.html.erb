<div class="col-3">
    <table class="table table-responsive table-hover" width="100%">
       <thead class="table">           
            <tr>
              <th> Search any job in Ethiopia</th>
            </tr>
       </thead>
       <tbody>
           <% @job_categories.each do |job_category| %>
               <tr> 
                    <td style="text-align: right;">
                         <%= link_to job_category.name , jobs_find_by_category_path(JobCategory_id: job_category.id), class:"link-primary" %>
                    </td>
                    <td>
                       <span class="badge bg-primary" style="background-color: yellow;"> <%= Job.where('deadlineDate >= ? and JobCategory_id = ? ',  Date.today,job_category.id).count %> </span>
                    </td>
                </tr>
            <% end %>
      </tbody>
    </table>            
            
    </div>