 <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <div class=" col-lg-6">
        <%= f.text_field :first_name,class:"form-control", placeholder:"First name" %>
        </div>
      </div><br />
      <div class="field form-group">
        <div class=" col-lg-6">
        <%= f.text_field :last_name,class:"form-control", placeholder:"Last name" %>
        </div>
      </div><br />
      <div class="dropdown show">
           <%= f.label "Gender" %><br />
           <%= f.select :gender, options_for_select([['Male','Male'],['Female','Female']]), :prompt => "Select",class:"dropdown-item" %>
      </div>
      <br />
      <div class="field form-group">
        <div class=" col-lg-6">
        <%= f.label :age %><br />
        <%= f.number_field :age,class:"form-control" %>
        </div>
      </div><br />
      <div class="field form-group">
        <div class=" col-lg-6">
        <%= f.text_field :phone_number,class:"form-control", placeholder:"Phone number" %>
        </div>
      </div><br />
      <div class="field form-group">
        <div class=" col-lg-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"Email" %>
        </div>
      </div><br />

      <div class="field form-group">
        <div class=" col-lg-6">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"form-control", placeholder:"Password" %>
        </div>
      </div>
      <br />

      <div class="field form-group">
        <div class=" col-lg-6">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control", placeholder:"Confirm your password" %>
        </div>
      </div>
      <br>
       <div class="field form-group">
          <%= f.check_box :is_employer, class:"form-check-input" %>
          <%= f. label "I am an employer", class:"form-check-label" %>
        </div><br />
       <%= f.hidden_field :is_manager, value: false %>
     
      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
    <br>
       