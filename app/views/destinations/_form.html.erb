
<%= simple_form_for(@destination) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :Country %>
    <%= f.input :Region %>
    <%= f.input :City %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
