<h1>Job Search Titles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_search_titles.each do |job_search_title| %>
      <tr>
        <td><%= job_search_title.name %></td>
        <td><%= link_to 'Show', job_search_title %></td>
        <td><%= link_to 'Edit', edit_job_search_title_path(job_search_title) %></td>
        <td><%= link_to 'Destroy', job_search_title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Search Title', new_job_search_title_path %>
